<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoldenDates.Login">
    <ContentPage.Content>
        <Grid>
            <Image Source="FONDOP.png" Aspect="AspectFill"/>
            <BoxView Color="Beige" Opacity="0.8"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Image Grid.Row="0" Source="GD.png" WidthRequest="100" HeightRequest="100" Margin="0, 50, 0, 30"/>

                <StackLayout Grid.Row="1" Padding="30,20">
                    <Entry x:Name="txtusernamelogin" Placeholder="Usuario" PlaceholderColor="Black"/>
                    <Entry x:Name="txtpasswordlogin" Placeholder="Contraseña" PlaceholderColor="Black" IsPassword="True"/>
                    <Button x:Name="btnlogin" Clicked="btnlogin_Clicked" Text ="Iniciar Sesión" BackgroundColor="White" BorderWidth="20" TextColor="Black"/>
                </StackLayout>


            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>